#!/usr/bin/env groovy
def gv 

pipeline {
    agent any
    tools {
        maven 'maven-3.9'
    }
    stages {

        stage('init') {
            steps {
                script {
                    gv = load "scripts.groovy"
                }

            }
        }
        stage('build jar') {
            steps {

                script {
                    gv.buildjar()
                }

            }
        }
        stage('build image') {
            steps {
                script {
                    gv.buildImage()
                    
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    gv.deploy()
                }
            }
        }
    }
}
